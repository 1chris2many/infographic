                    }
                },
                ...tooltipTitleCallback
            }
        });

        function updatePlayerInfo(playerKey) {
            const data = playerData[playerKey];
            if (!data) return;

            playerInfoContainer.innerHTML = `
                <h3 class="text-2xl font-bold" style="color: ${data.color};">${data.name}</h3>
                <p class="text-lg font-semibold text-gray-500">${data.tagline}</p>
                <div class="my-4 border-t border-gray-200"></div>
                <p class="font-semibold">Flagship Model(s): <span class="font-normal text-gray-700">${data.model}</span></p>
                <div class="mt-4">
                    <p class="font-semibold">Strategy:</p>
                    <p class="text-gray-700">${data.strategy}</p>
                </div>
                <div class="mt-4">
                    <p class="font-semibold">Monetization:</p>
                    <p class="text-gray-700">${data.monetization}</p>
                </div>
            `;
            
            playerLogos.forEach(logo => {
                logo.classList.remove('active');
                if (logo.dataset.player === playerKey) {
                    logo.classList.add('active');
                }
            });
        }

        function updateRadarChart(playerKey) {
            const data = playerData[playerKey];
            if (!data) return;

            benchmarkRadarChart.data.datasets = [{
                label: data.name,
                data: [data.benchmarks.mmlu, data.benchmarks.gpqa, data.benchmarks.math, data.benchmarks.swe],
                borderColor: data.color,
                backgroundColor: `${data.color}33`, // Add alpha transparency
                pointBackgroundColor: data.color,
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: data.color
            }];
            benchmarkRadarChart.update();
        }

        playerLogos.forEach(logo => {
            logo.addEventListener('click', () => {
                const playerKey = logo.dataset.player;
                updatePlayerInfo(playerKey);
                updateRadarChart(playerKey);
            });
        });

        // Initial load
        const initialPlayer = 'openai';
        updatePlayerInfo(initialPlayer);
        updateRadarChart(initialPlayer);
        document.querySelector(`[data-player="${initialPlayer}"]`).classList.add('active');

        // Nav smooth scroll highlighting
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('.nav-link');
        
        window.onscroll = () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= sectionTop - 80) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        };

    </script>
</body>
</html>
